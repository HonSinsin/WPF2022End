<Window x:Class="WpfApp1.Views.P7Command"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="P7Command" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Text="{Binding Name}" Height="20" Margin="5"/>
            <TextBox Text="{Binding Title}" Height="20" Margin="5"/>
            <Button Content="Show" Command="{Binding ShowCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
